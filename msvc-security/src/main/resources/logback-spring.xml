<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Encoder/format -->
    <property name="PATTERN" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %-5level [%thread] %logger{36} - %msg%n"/>

    <!-- Appender Loki (loki4j) -->
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <batchSize>50</batchSize>
        <batchTimeoutMs>2000</batchTimeoutMs>

        <http>
            <!-- Usa la variable de entorno LOGGING_URL definida en docker-compose -->
            <url>${LOGGING_URL:-http://localhost:3100}/loki/api/v1/push</url>
            <maxRetries>3</maxRetries>
            <connectTimeoutMs>2000</connectTimeoutMs>
            <readTimeoutMs>2000</readTimeoutMs>
        </http>

        <labels>
            <label name="app">msvc-security</label>
            <label name="env">${ENVIRONMENT:-dev}</label>
            <label name="instance">${HOSTNAME:-unknown}</label>
        </labels>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>${PATTERN}</pattern>
        </layout>
    </appender>

    <!-- Console appender opcional para desarrollo local -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="LOKI" />
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Niveles especÃ­ficos -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="com.yourcompany.package" level="DEBUG"/>

</configuration>
