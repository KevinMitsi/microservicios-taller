{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User",
  "type": "object",
  "required": ["id", "username", "email", "firstName", "lastName", "mobileNumber"],
  "properties": {
    "id": { "type": "string" },
    "username": { "type": "string" },
    "email": { "type": "string" },
    "firstName": { "type": "string" },
    "lastName": { "type": "string" },
    "mobileNumber": { "type": "string" },
    "authorities": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
