{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AuthResponse",
  "type": "object",
  "required": ["token"],
  "properties": {
    "token": {
      "type": "string",
      "pattern": "^[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+$"
    },
    "expiresIn": { "type": "integer" }
  }
}

